<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:background="@color/colorDialogTitle"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingStart="10dp"
        android:text="Forgot Password"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:text="To reset password, begin by entering your email."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:mtf_cardCollapsedHeight="2dp"
            app:mtf_animationDuration="200"
            app:mtf_openKeyboardOnFocus="true"
            app:mtf_image="@drawable/ic_account_circle_black_24dp"
            app:mtf_labelColor="@color/colorLabel">

            <EditText
                android:hint="Email or Phone number"
                android:inputType="textEmailAddress"
                android:id="@+id/edit_forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.dd.processbutton.FlatButton
            android:id="@+id/btn_sign_submit"
            android:textColor="@android:color/white"
            app:pb_colorNormal="@color/colorPrimary"
            app:pb_colorPressed="@color/colorPrimary"
            android:text="SUBMIT"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>