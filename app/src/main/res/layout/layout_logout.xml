<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:background="@color/colorDialogTitle"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingStart="10dp"
        android:text="Confirmation"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:text="Are you sure you want to logout?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.dd.processbutton.FlatButton
                android:id="@+id/btn_cancel"
                android:textColor="@android:color/black"
                app:pb_colorNormal="#ecf0f1"
                app:pb_colorPressed="#ecf0f1"
                android:text="CANCEL"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.dd.processbutton.FlatButton
                android:id="@+id/btn_logout"
                android:textColor="@android:color/white"
                app:pb_colorNormal="@color/colorPrimaryDark"
                app:pb_colorPressed="@color/colorPrimaryDark"
                android:text="LOGOUT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>